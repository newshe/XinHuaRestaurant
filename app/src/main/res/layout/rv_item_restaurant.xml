<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/ic_hanbager"
            android:background="@drawable/shape_background"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/food_image" />

        <TextView
            android:text="新鲜豆奶—久磨豆浆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_name"
            android:layout_alignTop="@+id/food_image"
            android:layout_toEndOf="@+id/food_image" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="2.00 / 杯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_number"
            android:layout_below="@+id/food_name"
            android:layout_toEndOf="@+id/food_image" />

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/food_name">
            <Button
                android:textColor="#fff"
                android:id="@+id/main_btn_less"
                android:background="@drawable/shape_btn_left"
                android:layout_weight="1"
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/main_number_view"
                android:gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="#fff"

                android:id="@+id/main_btn_add"
                android:background="@drawable/shape_btn_right"
                android:layout_weight="1"
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:background="#3a79797b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>