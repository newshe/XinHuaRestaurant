<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#dcdcdc"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <TextView
        android:id="@+id/view"
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageButton
        android:id="@+id/user_btn_return"
        android:layout_marginBottom="0.2dp"
        style="@style/btn_input_amount_style"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:background="@drawable/shape_user_return"
        android:layout_width="match_parent"
        android:layout_height="25dp">

    </ImageButton>

    <LinearLayout
        android:id="@+id/key123"
        style="@style/layout_input_amount_style"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/keyboard1"
            android:background="@drawable/shape_btn_color"
            android:text="1"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style"
            android:layout_weight="1"
             />
        <Button
            android:id="@+id/keyboard2"
            android:background="@drawable/shape_btn_color"

            android:text="2"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style"
            android:layout_weight="1" />
        <Button
            android:id="@+id/keyboard3"
            android:background="@drawable/shape_btn_color"

            android:text="3"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/key0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key123"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/keyboard4"
            android:background="@drawable/shape_btn_color"
            android:text="4"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />
        <Button
            android:id="@+id/keyboard5"
            android:background="@drawable/shape_btn_color"

            android:text="5"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />
        <Button
            android:id="@+id/keyboard6"
            android:background="@drawable/shape_btn_color"

            android:text="6"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/key789"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/keyboard7"
            android:background="@drawable/shape_btn_color"

            android:text="7"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style"
             />
        <Button
            android:id="@+id/keyboard8"
            android:background="@drawable/shape_btn_color"

            android:text="8"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />
        <Button
            android:id="@+id/keyboard9"
            android:background="@drawable/shape_btn_color"

            android:text="9"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/key456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key789"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:background="@drawable/shape_btn_color_black"
            android:textSize="23dp"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />
        <Button
            android:id="@+id/keyboard0"
            android:background="@drawable/shape_btn_color"
            android:text="0"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style" />
        <ImageButton
            android:id="@+id/keyboard_delete"
            android:background="@drawable/shape_btn_color_black"
            android:src="@drawable/ic_svg_delete"
            android:layout_margin="0.1dp"
            style="@style/btn_input_amount_style_black" />

    </LinearLayout>

</LinearLayout>